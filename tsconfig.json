{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist/@types",
    "emitDeclarationOnly": false,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "@types/*"]
    }
  },
  "include": ["src/**/*", "src/tests/**/*", "@types/**/*"],
  "exclude": ["node_modules", "dist"]
}
